# Flask Application Secret Key
# IMPORTANT: Generate a new secret key using: python -c "import secrets; print(secrets.token_hex(32))"
# DO NOT share this key or commit the actual .env file to version control
SECRET_KEY=your-secret-key-here-change-this-to-a-random-64-character-hex-string

# Admin Password
# This will be hashed automatically on first run
# Change this immediately after first login
ADMIN_PASSWORD=admin123

# Database Configuration
DATABASE_PATH=eu_tracker.db

# Session Configuration
SESSION_IDLE_TIMEOUT_MINUTES=30
SESSION_COOKIE_SECURE=False
# Set SESSION_COOKIE_SECURE=True when using HTTPS in production

# Flask Environment
# FLASK_ENV is deprecated in Flask 2.2+, use FLASK_DEBUG only
FLASK_DEBUG=False

# Security Settings
PASSWORD_HASH_SCHEME=argon2
MAX_LOGIN_ATTEMPTS=5
ATTEMPT_WINDOW_SECONDS=600

# GDPR & Compliance
RETENTION_MONTHS=36
DSAR_EXPORT_DIR=./exports
AUDIT_LOG_PATH=./logs/audit.log

# Application Settings
HOST=127.0.0.1
PORT=5001

# Pexels API (for cityscape images)
# IMPORTANT: Get a free API key from: https://www.pexels.com/api/
PEXELS_API_KEY=your-pexels-api-key-here