# ComplyEur Environment Variables
# Copy this file to .env and configure your values
# DO NOT commit .env to version control

# REQUIRED: Secret Key - Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here-change-this-to-a-random-64-character-hex-string

# Database path (relative or absolute)
DATABASE_PATH=data/complyeur.db

# Session settings
SESSION_COOKIE_SECURE=false
SESSION_IDLE_TIMEOUT_MINUTES=30

# Data retention (months)
RETENTION_MONTHS=36

# Export and log directories
EXPORT_DIR=./exports
AUDIT_LOG_PATH=./logs/audit.log

# Flask environment
FLASK_ENV=production
FLASK_DEBUG=false

# News filter region: EU_ONLY or ALL
NEWS_FILTER_REGION=EU_ONLY
